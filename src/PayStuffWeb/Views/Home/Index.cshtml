@model List<PayStuffLib.Benefits.BenefitsCost>
@{
    ViewBag.Title = "Benefits Costs";
}
<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">Just a simple experiment in calculators...</p>
</div>
<div class="panel-body" data-bind="with: benefitCosts">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th># of Dependents</th>
                <th>Cost</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody data-bind="foreach: costs">
            <tr>
                <td data-bind="text: dependentName"></td>
                <td data-bind="text: numberOfDependents"></td>
                <td data-bind="text: cost"></td>
                <td><input type="button" class="btn btn-danger btn-xs" value="delete" data-bind="click: $parent.removeCost" /></td>
            </tr>
        </tbody>
    </table>
</div>

<div data-bind="with: employee">
    <form role="form">
        <div class="form-group">
            <label for="name">Name</label>
            <input id="name" type="text" class="form-control" data-bind="value: dependentName" />
        </div>

        <div class="form-group">
            <label for="numberOfDependents"># of Dependents</label>
            <input id="numberOfDependents" type="number" class="form-control" data-bind="value: numberOfDependents" />
        </div>

    </form>
    <input type="button" id="addEmployee" class="btn btn-primary" value="Add Employee" data-bind="click: addEmployee" />    
</div>

@section scripts{
    <script src="~/Scripts/PayStuffApp/homeViewModel.js"></script>
}
