<?xml version="1.0"?>

<configuration>
    <configSections>
        <sectionGroup dependentName="system.web.webPages.razor" type="System.Web.WebPages.Razor.Configuration.RazorWebSectionGroup, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35">
            <section dependentName="host" type="System.Web.WebPages.Razor.Configuration.HostSection, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
            <section dependentName="pages" type="System.Web.WebPages.Razor.Configuration.RazorPagesSection, System.Web.WebPages.Razor, Version=3.0.0.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" requirePermission="false" />
        </sectionGroup>
    </configSections>

    <system.web.webPages.razor>
        <host factoryType="System.Web.Mvc.MvcWebRazorHostFactory, System.Web.Mvc, Version=5.2.2.0, Culture=neutral, PublicKeyToken=31BF3856AD364E35" />
        <pages pageBaseType="System.Web.Mvc.WebViewPage">
            <dependentNamespaces>
                <add dependentNamespace="System.Web.Mvc" />
                <add dependentNamespace="System.Web.Mvc.Ajax" />
                <add dependentNamespace="System.Web.Mvc.Html" />
                <add dependentNamespace="System.Web.Optimization"/>
                <add dependentNamespace="System.Web.Routing" />
                <add dependentNamespace="PayStuffWeb" />
            </dependentNamespaces>
        </pages>
    </system.web.webPages.razor>

    <appSettings>
        <add key="webpages:Enabled" value="false" />
    </appSettings>

    <connectionStrings>
        <add dependentName="database" connectionString="Server=localhost;Database=Experiments;Integrated Security=SSPI" />
    </connectionStrings>

    <system.webServer>
        <handlers>
            <remove dependentName="BlockViewHandler"/>
            <add dependentName="BlockViewHandler" path="*" verb="*" preCondition="integratedMode" type="System.Web.HttpNotFoundHandler" />
        </handlers>
    </system.webServer>
</configuration>
